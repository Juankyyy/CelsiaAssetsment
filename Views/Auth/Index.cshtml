@model User;
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/login.css">
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="shortcut icon" href="~/img/favicon.svg" type="image/x-icon">
    <title>Login</title>
</head>
<body>
    <main>
        <div class="left">
            <form class="left-content" asp-controller="Auth" asp-action="Login" method="post">
                <div class="left-title">
                    <h4>Login</h4>
                </div>

                <div class="input-item">
                    <input type="email" placeholder="Email" asp-for="Email" autofocus required>
                </div>

                <div class="input-item">
                    <input type="password" placeholder="Password" asp-for="Password" required>
                </div>

                <button class="login-btn">Iniciar Sesión</button>
            </form>

            <div class="links">
                <span>¿No tienes cuenta? <a asp-controller="Auth" asp-action="Signup">Regístrate</a></span>
            </div>
        </div>

        <div class="right">
            <img src="~/img/loginUndraw.svg" alt="Login Ilustration">
        </div>
    </main>

    <footer>
        <a href="https://github.com/Juankyyy/CelsiaAssetsment" target="_blank">
