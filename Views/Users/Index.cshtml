@{
    ViewData["Title"] = "CRUD Users";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
    <div class="d-flex flex-column h-100">
        <div class="container px-5">
            <div class="row gx-5 align-items-center">
                <div class="col-xxl-5">
                    <h2 class="fw-bolder mb-3 d-flex align-items-center gap-3">
                        Users
                        <a class="btn btn-success" asp-action="Create">Create User</a>
                    </h2>

                    <table class="table table-dark table-striped">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Document Number</th>
                                <th>Phone</th>
                                <th>Address</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td>@user.Id</td>
                                    <td>@user.Name</td>
                                    <td>@user.Email</td>
                                    <td>@user.DocumentNumber</td>
                                    <td>@user.Phone</td>
                                    <td>@user.Address</td>
                                    <td>
                                        <a class="btn btn-sm btn-info" asp-controller="Users" asp-action="Show">Details</a>
                                        <a class="btn btn-sm btn-warning" asp-controller="Users" asp-action="Edit">Edit</a>
                                        <a class="btn btn-sm btn-danger" asp-controller="Users" asp-action="Delete">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>
</html>