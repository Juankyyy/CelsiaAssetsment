@model User;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/signup.css">
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="shortcut icon" href="~/css/Login/favicon.svg" type="image/x-icon">
    <title>Sign up</title>
</head>
<body class="d-block">
    <main>
        <div class="left">
            <form class="left-content" asp-action="CreateUser" method="post">
                <div class="left-title">
                    <h4>Create User</h4>
                </div>

                <div class="inputs">
                    <div class="inputs-left">
                        <div class="input-item">
                            <input type="text" placeholder="Username" autofocus asp-for="Name" required>
                        </div>
        
                        <div class="input-item">
                            <input type="email" placeholder="Email" asp-for="Email" required>
                        </div>
        
                        <div class="input-item">
                            <input type="password" placeholder="Password" asp-for="Password" required>
                        </div>
                    </div>

                    <div class="inputs-right">
                        <div class="input-item">
                            <input type="number" placeholder="Document Number" autofocus asp-for="DocumentNumber" required>
                        </div>

                        <div class="input-item">
                            <input type="number" placeholder="Phone" autofocus asp-for="Phone" required>
                        </div>

                        <div class="input-item">
                            <input type="text" placeholder="Address" autofocus asp-for="Address" required>
                        </div>
                    </div>
                </div>

                <button class="login-btn">Create User</button>
            </form>
    </main>
</body>
</html>